<style>
input[type='submit']{
  border: 0;
  color: blue;
  text-decoration: underline;
  background: none;
}
</style>

<h1>
  <%= @post.title %> 
  <small>
    <a href="/posts/<%= @post.id %>/edit">edit</a> 
  
    <form action="/posts/<%= @post.id %>" method="POST">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" value="X">
    </form>
  </small>
</h1>

<% if @post.author %>
<h2><a href="/authors/<%= @post.author.id %>"><%= @post.author_name  %></a></h2>
<% end %>

<h3>
  <%#= @post.tags.collect(&:name).join(", ") %>
  <%= @post.tags.collect{|t| t.name}.join(", ") %>
</h3>

<p><%= @post.content %></p>