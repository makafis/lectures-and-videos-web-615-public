<style>
.field_with_errors input{
  border: 1px solid red;
}
</style>

<h1>Make a Mixtape</h1>

<%= form_for(@mixtape) do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <% if @mixtape.errors[:name].any? %>
      <small>Please enter a name</small>
    <% end %>
  </p>

  <p>
    Add Songs:

    <ul>
      <% # http://api.rubyonrails.org/classes/ActionView/Helpers/FormHelper.html#method-i-fields_for %>
      <%= f.fields_for :songs do |song_field| %>
        <li><%= song_field.text_field :title %></li>
      <% end %>
    </ul>

  <p><%= f.submit %></p>
<% end %>
